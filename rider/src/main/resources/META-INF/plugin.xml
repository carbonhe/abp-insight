<idea-plugin require-restart="true">
    <id>Carbon.AbpInsight</id>
    <name>Abp Insight</name>
    <vendor>Carbon</vendor>
    <depends>com.intellij.modules.rider</depends>

    <extensions defaultExtensionNs="com.intellij">
        <dependencySupport kind="dotnet" coordinate="Volo.Abp.Core" displayName="Abp Insight"/>
        <projectConfigurable parentId="FileTemplatesSettingsId"
                             instance="com.carbon.settings.AbpInsightTemplatesOptionPage"
                             groupWeight="-120" displayName="Abp Insight"/>
    </extensions>

    <description><![CDATA[
<p>Adds navigation, auto-completion and inspections specific to the <a href="https://abp.io/">Abp Framework</a>.</p>
<p>
<strong>Features</strong>
<ul>
  <li>Analyze Abp module dependencies and potential problems.</li>
  <li>And much more!</li>
</ul>
</p>
]]>
    </description>

</idea-plugin>
